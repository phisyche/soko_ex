extends ../layout

block content
  .page_body
    .container
      .row
        .col-md-offset-3.col-md-6.col-md-offset-3
          h3.text-center Register 
      .col-md-offset-3.col-md-6.col-md-offset-3
        form.form-horizontal(method='post', action='/register')
          .form-group
            .col-sm-10
              input#names.form-control(type='text', name='names', placeholder='Name')
          .form-group
            .col-sm-10
              input#phone.form-control(type='number', name='phone', placeholder='0700000000')
          .form-group
            .col-sm-10
              input#email.form-control(type='text', name='email', placeholder='you@domain.com')
          .form-group
            .col-sm-10
              input#password.form-control(type='password', name='password', placeholder='Password')
          .form-group
            .col-sm-10
              input#cpassword.form-control(type='password', name='cpassword', placeholder='Confirm Password')
          .form-group
            div
              button.btn.btn-primary(type='submit') Register
