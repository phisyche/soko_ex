extends ../layout

block content
  .page_body
    .container
      .col-md-offset-3.col-md-6.col-md-offset-3
          h3.text-center Add Property 
      .col-md-offset-0.col-md-12.col-md-offset-0
        form.form-horizontal(method="post",action="/property/new",enctype="multipart/form-data")
          .form-group
            .col-sm-12
              input#name.form-control(type='text', name='name', placeholder='Name')
          .form-group
            .col-sm-12
              textarea#description.form-control(name='description', placeholder='Property description')
          .form-group
            .col-sm-6
              input#city.form-control(type='text', name='city', placeholder='City')
            .col-sm-6
              input#map.form-control(type='text', name='map', placeholder='map')
          .form-group
            .col-sm-6
              input#price.form-control(type='text', name='price', placeholder='price')
            .col-sm-6
              select.selectpicker.form-control(name='listtype', data-selected-text-format='count > 5')
                option(value='') Choose Property type
                option(value='sale') For Sale
                option(value='rent') For Rent
          .form-group
            .col-sm-12
              select.selectpicker.form-control(name='category', data-selected-text-format='count > 4')
                option(value='') Choose category
                option(data-icon='glyphicons glyphicon-building', value='apartment') Apartment
                option(data-icon='glyphicon-home', value='house') House
                option(data-icon='glyphicon-leaf', value='land') Agricultural Land
                option(data-icon='glyphicons glyphicon-road', value='land') Commercial Land
                option(data-icon='glyphicon-home', value='land') Residential Land
                option(data-icon='glyphicons glyphicons-mixed-buildings', value='house') Office Space
                option(data-icon='glyphicons glyphicon-industrial-zone', value='developments') New Developments 
          .form-group
            .col-sm-12
              h5 select additional features
              select.selectpicker.form-control(name='features', data-selected-text-format='count > 4', multiple)
                option(data-icon='glyphicons glyphicons-open-water', value='house') Swimming pool
                option(data-icon='glyphicon glyphicon-signal', value='office') Lawn
                option(data-icon='glyphicon-credit-card', value='shop') Shop
                option(data-icon='glyphicon-cutlery', value='land') Agricultural Land
                option(data-icon='glyphicon glyphicon-glass', value='land') Residential Land
                option(data-icon='glyphicon-gift', value='developments') Developments         
          .form-group
            .col-sm-4
              label(for='photo') Cover Photo
            .col-sm-8
              input#photo.form-control(type='file', name='photo', placeholder='photo')
          .form-group
            .col-sm-4
              label(for='gallery') Gallery
            .col-sm-8
              input#gallery.form-control(type='file', name='gallery', placeholder='gallery', multiple='')
          .form-group
            .row
              button.button.btn.btn-warning.form-control(type='submit') Create
