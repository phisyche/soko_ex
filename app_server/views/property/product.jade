extends ../layout

block content
  .container
    .col-md-12
      .thumbnail
        .row
          .col-sm-6
            img.img-responsive(src="/uploads/"+property.photo width="100%" alt='')
            .thumbnails.row
              each image in property.gallery
                .col-xs-3
                  a(href='/property/#{property.slug}')
                    img.img-thumbnail.img-responsive(src='/uploads/'+image.filename, width="100%" alt='')
          .col-sm-6
            h4.pull-right Ksh: #{property.price}
            h4
              a(href='/property/#{property.slug}')
                sup
                =property.name
            p
              !{property.description}
              #map(style='width:450px;height:300px;background:yellow')
              script.
                function myMap() {
                var mapCanvas = document.getElementById("map");
                var mapOptions = {
                center: new google.maps.LatLng(0, 40), zoom: 10
                };
                var map = new google.maps.Map(mapCanvas, mapOptions);
                }
              script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBu-916DdpKAjTmJNIgngS6HL_kDIKU0aU&callback=myMap')
