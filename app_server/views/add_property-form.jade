extends layout

block content
  link(rel='stylesheet', href='/stylesheets/form.css')
  div(style='height:40px;')
  .assessment-container.container
    .row
      .col-md-6.form-box
        form.registration-form(role='form', action='javascript:void(0);')
          fieldset
            .form-top
              .form-top-left
                h3
                  span
                    i.fa.fa-calendar-check-o(aria-hidden='true')
                  |  Get Started Now
            .form-bottom
              .row
                .form-group.col-md-6.col-sm-6
                  input#fname.form-control(type='text', placeholder='Firstname')
                .form-group.col-md-6.col-sm-6
                  input#lname.form-control(type='text', placeholder='Lastname')
              .form-group(style='margin-bottom:3px;')
                .row
                  .form-group.col-md-3.col-sm-3
                    select.form-control
                      option 00
                      option 00
                      option 00
                      option 00
                      option 00
                  .form-group.col-md-9.col-sm-9
                    input#contact_number.form-control(type='text', placeholder='Contact Number')
              .form-group
                input#email.form-email.form-control(type='text', name='email', placeholder='Email', required='')
              .form-group
                select.form-control
                  option Property Type
                  option Apartment
                  option Land
                  option House
              button.btn.btn-next(type='button') Next
          fieldset
            .form-top
              .form-top-left
                h3
                  span
                    i.fa.fa-calendar-check-o(aria-hidden='true')
                  |  Get Started Now
            .form-bottom
              .form-group
                select.form-control
                  option Location
                  option Location
                  option Location
                  option Location
                  option Locationa
              .form-group
                input#pref_date.form-control(type='date')
              .form-group
                select.form-control
                  option Preffered Time
                  option Location
                  option Location
                  option Location
                  option Location
                  option Locationa
              button.btn.btn-previous(type='button') Previous
              button.btn(type='submit') Submit

    // jQuery
  script(src='http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js', type='text/javascript')
  // jQuery easing plugin
  script(src='http://thecodeplayer.com/uploads/js/jquery.easing.min.js', type='text/javascript')
  script(src='/javascripts/form.js', type='text/javascript')
    
