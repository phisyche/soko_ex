doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/bootstrap/css/usebootstrap.less')
    link(rel='stylesheet', href='/stylesheets/account.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    .navbar.navbar-default
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-responsive-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a(href='/')  
          img(src='/images/logo.png')
      .navbar-collapse.collapse.navbar-responsive-collapse
        ul.nav.navbar-nav
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/blog/') Blog
          if user
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown') 
                = user.names
                b.caret
              ul.dropdown-menu
                li
                  a(href='/dashboard') Dashboard
                li
                  a(href='/logout') logout
          else
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown') Login/Register
              ul.dropdown-menu
                li
                  a(href='/login') Login
                li
                  a(href='/register') Register
          li
            a(href='/property/new')
              button.btn.btn-info(type='button') ADD PROPERTY +
    block content
    footer
      .row
        .col-xs-12
          p
            | Copyright Â© 
            a(href='/') Sokoestate
            | 2017
      if errors
        each error in errors
          .alert.alert-danger=error.msg
        if message    
          .alert.alert-info=message
        if success_msg     
          .alert.alert-success=success_msg
        if error_msg     
          .alert alert-danger=error_msg
        if error    
          .alert.alert-danger=error
